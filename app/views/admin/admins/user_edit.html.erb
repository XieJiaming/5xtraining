<p>Edit User Page</p>
<%= form_with model: @user, url: user_update_admin_admin_path(@user), method: 'put' do |form| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <% @user.errors.full_messages.each do |message| %>
        <div>
          <%= message %>
        </div>
      <% end %>
    </div>
  <% end %>
  <div class="form-floating mb-3">
    <%= form.text_field :name, class: 'form-control', placeholder: 'Name'%>
    <%= form.label :name , 'Name'%>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_field :email, class: 'form-control', placeholder: 'name@example.com' %>
    <%= form.label :email , 'Email address'%>
  </div>
  <div class="form-floating mb-3">
    <%= form.password_field :password, class: 'form-control', placeholder: 'Password'%>
    <%= form.label :password , 'Password'%>
  </div>
  <div class="form-floating mb-3">
    <select name="user[admin]" id="user_admin" class="form-select form-select-sm mb-3" aria-label="false" >
      <option selected="selected" value="false">false</option>
      <option value="true">true</option>
    </select>
  </div>
  <div class="form-floating">
    <%= form.submit(class: "btn btn-primary my-5", value: 'Update User')%>
  </div>
<% end %>