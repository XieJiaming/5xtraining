<p> Create New User </p>
<%= form_with model: @user, url: admin_users_path, method: 'post' do |form| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <% @user.errors.full_messages.each do |message| %>
        <div>
          <%= message %>
        </div>
      <% end %>
    </div>
  <% end %>
  <div class="form-floating mb-3">
    <%= form.text_field :name, class: 'form-control', placeholder: 'Name'%>
    <%= form.label :name , 'Name'%>
  </div>

  <div class="form-floating mb-3">
    <%= form.text_field :email, class: 'form-control', placeholder: 'name@example.com' %>
    <%= form.label :email , 'Email address'%>
  </div>
  <div class="form-floating mb-3">
    <%= form.password_field :password, class: 'form-control', placeholder: 'Password'%>
    <%= form.label :password , 'Password'%>
  </div>
  <div class="form-floating mb-3">
    <select name="user[admin]" id="user_admin" class="form-select form-select-sm mb-3"  >
      <option selected="selected" value="False">False</option>
      <option value="True">True</option>
    </select>
  </div>
  <div class="form-floating">
    <%= form.submit(class: "btn btn-primary my-5", value: 'Create User')%>
  </div>
<% end %>